@model IEnumerable<QLThuVien.Models.TACGIA>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách tác giả</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tenTacGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.namSinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.moTa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.anh)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tenTacGia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.namSinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.moTa)
        </td>
        <td>
            @{ 
                var path = "~/Images/TACGIA/" + item.anh;
            }
            <img src="@Url.Content(path)" width="150" class="img-fluid img-thumbnail" />
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.maTacGia }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.maTacGia }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.maTacGia })
        </td>
    </tr>
}

</table>
