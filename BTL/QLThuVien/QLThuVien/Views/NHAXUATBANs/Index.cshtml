@model IEnumerable<QLThuVien.Models.NHAXUATBAN>

@{
    ViewBag.Title = "Danh sách nhà xuất bản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách nhà xuất bản</h2>

<p>
    @Html.ActionLink("Thêm nhà xuất bản mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tenNXB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.soDT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.diaChi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tenNXB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.soDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.diaChi)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.maNXB }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.maNXB }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.maNXB })
        </td>
    </tr>
}

</table>
