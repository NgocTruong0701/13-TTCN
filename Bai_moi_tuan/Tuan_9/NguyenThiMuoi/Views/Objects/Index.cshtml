@model IEnumerable<OnTap_1.Models.Sanpham>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using(Html.BeginForm())
            {
                <p>
                    Tim gia: @Html.TextBox("searchString")
                    <input type="submit" value="Tim"/>
                </p>
            }
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Danhmuc.TenDanhmuc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tenvd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mota)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenAnh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Giatien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Soluong)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Danhmuc.TenDanhmuc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tenvd)
        </td>
        <td>
            @{
                string ImagePath = "~/Images/" + item.Mota;
            }
            <img src="@Url.Content(ImagePath)" width="100" class="img-thumbnail" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenAnh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Giatien)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Soluong)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Mavd }) |
            @Html.ActionLink("Details", "Details", new { id=item.Mavd }) |
            @Html.ActionLink("XoaSanPham", "XoaSanPham", new { id=item.Mavd })
        </td>
    </tr>
}

</table>
